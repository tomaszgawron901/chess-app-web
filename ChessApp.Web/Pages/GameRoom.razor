@page "/game-room/{GameCode}"
@inherits GameRoomBase
@using ChessBoardComponents


<div class="game-room-container">
    <div class="left-sidebar">
        <div class="card">
            <div class="card-body">
                <FullGameOptionsForm></FullGameOptionsForm>
                <CopyUrlField Url="@JoinUrl"></CopyUrlField>
            </div>
        </div>
    </div>

    <div class="main">
        @if (Game != null)
        {
            <ChessBoardComponent @ref="ChessBoardComponent" IsRotated="false" Width="Game.Board.Width" Height="Game.Board.Height" OnFieldClicked="OnBoardFieldClicked" IsReady="AfterBoardReady"/>
        }
    </div>

    <div class="right-sidebar">
        <div class="card">
            <div class="card-body">
                <FullGameOptionsForm></FullGameOptionsForm>
                <CopyUrlField Url="@JoinUrl"></CopyUrlField>
            </div>
        </div>
    </div>
</div>

