<div class="progress" style="height: 4px">
    @if(IsLoading || IsError)
    {
        <div class="progress-bar @(IsLoading ? "progress-bar-striped progress-bar-animated" :"bg-danger") " 
            role="progressbar" 
            style="width: 100%" 
            aria-valuenow="100" 
            aria-valuemin="0" 
            aria-valuemax="100">
        </div>
    }
</div>