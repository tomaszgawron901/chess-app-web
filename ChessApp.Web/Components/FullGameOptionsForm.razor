@inherits FullGameOptionsFormBase


<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text custom-span">@L["player1"]</span>
    </div>
    <input type="text" disabled class="form-control" value=@(FullGameOptions?.Player1 ?? L["waiting"]) />
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text custom-span">@L["player2"]</span>
    </div>
    <input type="text" disabled class="form-control" value=@(FullGameOptions?.Player2 ?? L["waiting"])/>
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text custom-span">@L["game_varient"]</span>
    </div>
    <select disabled class="form-control">
        <option selected=@(FullGameOptions?.GameVarient == GameVarient.Standard)>@L["game_varient.standard"]</option>
        <option selected=@(FullGameOptions?.GameVarient == null)>@L["not_provided"]</option>
    </select>
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text custom-span">@L["seconds_per_side"]</span>
    </div>
    <input type="text" disabled class="form-control" value=@(FullGameOptions?.SecondsPerSide.ToString() ?? L["not_provided"]) />
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text custom-span">@L["increment_in_seconds"]</span>
    </div>
    <input type="text" disabled class="form-control" value=@(FullGameOptions?.IncrementInSeconds.ToString() ?? L["not_provided"]) />
</div>